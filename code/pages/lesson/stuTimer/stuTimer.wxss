/* pages/lesson/stuTimer/stuTimer.wxss */
.card{
  background-color: #fff;
  border-radius: 30rpx;
  width: 694rpx;
  margin-top: 30rpx;
}

.card-title{
  height: 134rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar-base{
  width: 114rpx;
  height: 114rpx;
  margin-left: 30rpx;
}

.avatar-bg{
  width: 114rpx;
  height: 114rpx;
  position: absolute;
}

.avatar{
  width: 94rpx;
  height: 94rpx;
  border-radius: 47rpx;
  position: absolute;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.stu-no{
  font-size: 28rpx;
  color: #666666;
  margin-left: 34rpx;
}

.stu-per{
  font-size: 32rpx;
  color: #666666;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.stu-name{
  font-size: 32rpx;
  color: #666666;
}

.card-timer{
  height: 754rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.timer-line{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.timer-timer{
  font-size: 80rpx;
  color: #ff4613;
}

.timer-tip{
  font-size: 28rpx;
  color: #666666;
}

.button{
  width: 120rpx;
  height: 120rpx;
}

.button-icon{
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}


