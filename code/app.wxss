/** 页面样式 **/
Page {
  background: #EFEFF4;
}

.layout-hover {
  opacity: 0.9;
  transform: scale(0.95, 0.95);
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.list{
  width: 100%;
  margin-top: 16rpx;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items:center;
}

.list-row{
  margin-top: 16rpx;
  flex-direction: row;
  display: flex;
  align-items:center;
  flex-wrap:wrap;
}

.button-big{
  width: 690rpx;
  height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  background-color: #ff4612;
  border-radius: 50rpx;
  box-shadow: 0rpx,0rpx,25rpx,25rpx,black;
}

.button-big-base{
  width: 718rpx;
  height: 143rpx;
}

.button-big-img{
  position: absolute;
  width: 718rpx;
  height: 143rpx;
}

.button-big-text{
  position: absolute;
  width: 718rpx;
  height: 143rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  padding-top: 36rpx;
}

.tip-title{
  width: 100%;
  margin-top: 80rpx;
  display: flex;
  flex-direction: row;
}

.tip-title-icon{
  width: 40rpx;
  height: 40rpx;
  margin-left: 60rpx;
}

.tip-title-text{
  color: #666666;
  font-size: 24rpx;
  margin-left: 6rpx;
}

.tip-msg{
  width: 100%;
  height: 200rpx;
  margin-top: 10rpx;
  padding-left: 200rpx;
  color: #999999;
  font-size: 24rpx;
}


.botoom-logo-view{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bottom-logo-image{
  width: 318rpx;
  height: 40rpx;
}


/** search **/
.search-bar{
  width: 100%;
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}

.search-bar-form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}

.search-bar-box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.search-bar-icon-search {
  position: absolute;
  left: 10px;
  top: 7px;
}

.search-bar-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.search-bar-input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

